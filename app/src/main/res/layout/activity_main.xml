<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/layout_main_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#212121">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="On Pressing the Button your Current Location will be transmitted to your assigned mobile number"
        android:textColor="#404040"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/fingerPrintDemo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/fingerprint"
        android:padding="30dp"
        android:background="@drawable/roundbutton"
        android:clickable="true"
        android:contextClickable="true"/>

    <TextView
        android:id="@+id/textView_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerPrintDemo"
        android:gravity="center"
        android:text=""
        android:textColor="#404040"
        android:textSize="15sp"
        android:layout_marginTop="40sp"/>
    <TextView
        android:id="@+id/text_location"
        android:layout_below="@+id/textView_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textColor="#636363"
        android:textSize="25dp"
        android:layout_marginTop="30dp"/>

</RelativeLayout>